{
  "version": 2,
  "builds": [
    {
      "src": "templates/*",
      "use": "@vercel/static"
    },
    {
      "src": "static/*",
      "use": "@vercel/static"
    },
    {
      "src": "app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/templates/(.*)",
      "dest": "/templates/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "https://legaleagle-backend.onrender.com/api/$1"
    },
    {
      "src": "/(.*)",
      "headers": {
        "Content-Type": "text/html"
      },
      "dest": "/templates/index.html"
    }
  ]
}